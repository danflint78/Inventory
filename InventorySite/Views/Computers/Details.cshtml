@model InventorySite.Models.Computer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h3>Computer</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FormFactor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FormFactor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InstallDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InstallDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PrimaryMac)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrimaryMac)
        </dd>

    </dl>

    <div class="row">

            <h4>Operating System</h4>
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Architecture
                    </th>
                </tr>

                @foreach (var item in Model.OperatingSystems)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Architecture)
                        </td>
                    </tr>
                }

            </table>

            <h4>Hard Drive</h4>
            <table class="table">
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        Capacity
                    </th>
                </tr>

                @foreach (var item in Model.Harddrives)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Capacity)
                        </td>
                    </tr>
                }

            </table>

            <h4>Motherboard</h4>
            <table class="table">
                <tr>
                    <th>
                        Make
                    </th>
                    <th>
                        Model
                    </th>
                    <th>
                        Number of Display Ports
                    </th>
                    <th>
                        Number of Memory Ports
                    </th>
                    <th>
                        Has a Parallel Port
                    </th>
                </tr>

                @foreach (var item in Model.Motherboards)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Make)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfDisplayPorts)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfMemoryPorts)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HasParallelPort)
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ComputerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
